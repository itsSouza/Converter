<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">



    <TextView
        android:id="@+id/txt_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Libras"
        android:textSize="32sp"
       app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="180dp"/>

    <ImageView
        android:id="@+id/img_haltere"
        android:layout_width="120dp"
        android:layout_height="64dp"
        android:src="@drawable/dumbbell_svgrepo_com"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txt_question"
        app:layout_constraintTop_toTopOf="@id/txt_question"
        />
    <ImageView
        android:id="@+id/img_haltere2"
        android:layout_width="120dp"
        android:layout_height="64dp"
        android:src="@drawable/dumbbell_svgrepo_com"
        app:layout_constraintStart_toEndOf="@id/txt_question"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txt_question"
        />

    <EditText
        android:id="@+id/edt_lbs"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="5.5"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_question" />

    <TextView
        android:id="@+id/txt_question2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Quilos"
        android:textSize="32sp"
        app:layout_constraintTop_toBottomOf="@id/edt_lbs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="64dp"/>

    <ImageView
        android:id="@+id/img_haltere3"
        android:layout_width="120dp"
        android:layout_height="64dp"
        android:src="@drawable/dumbbell_svgrepo_com"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txt_question2"
        app:layout_constraintTop_toTopOf="@id/txt_question2"
        />

    <ImageView
        android:id="@+id/img_haltere4"
        android:layout_width="120dp"
        android:layout_height="64dp"
        android:src="@drawable/dumbbell_svgrepo_com"
        app:layout_constraintStart_toEndOf="@id/txt_question2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txt_question2"
        />

    <TextView
        android:id="@+id/txt_kg"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"

        android:textSize="32sp"
        android:textColor="#FF9800"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_question2" />

    <Button
        android:id="@+id/bt_calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="24dp"
        android:text="@string/calcular"
        android:textSize="24sp"
        android:backgroundTint="#FF9800"
        />


</androidx.constraintlayout.widget.ConstraintLayout>